@import './variable';
@import './mixin';

.containerBadgeRow
    twoColumnGrid()
    padding-bottom: 10px
    @media screen and (max-width 1170px)
        display: flex
        flex-wrap: wrap
.badgeRow 
    centerFlex()
    justify-content: flex-start
    margin-top: 20px
    min-height: 180px
    @media screen and (max-width: 650px)
        flex-direction: column
        align-items: center
        text-align: center  

.badgeRowImageContainer
    display: flex
    flex-direction: column
    align-items: center
    justify-content: space-around
    min-width 30%
    width: 30%
    height: 100%
    svg 
        min-width 40px
        min-height: 40px
        cursor pointer
        width: 40px
        height: 40px
        margin: 5px 0
        &:hover
            transform: scale(1.05)
            transition: all 0.2s   
    img
        width: 100%
        height: 145px
        border-radius: 10px
        background: white
        object-fit: contain
        margin-right: 10px
        @media screen and (max-width: 800px)
            width: 100px
            height: 75px
.badgeRowTextContainer
    display: flex
    flex-direction: column
    justify-content: space-evenly
    height: 100%
    margin-left: 10px
    @media screen and (max-width: 650px)
        justify-content: center
        align-items: center
        margin-top: 10px
    .badgeRowTitle
        centerFlex()
        justify-content: flex-start
        flex-wrap: wrap
        text-transform: capitalize
        color: color-primary
        width: 100%
        white-space: break-spaces
        transition: all 0.1s
        svg 
            cursor pointer
            width: 20px
            height: 20px
            margin-left: 10px
            &:hover
                transform: scale(1.01)
    .textLineClamp
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;  
        overflow: hidden;
        width 100%
