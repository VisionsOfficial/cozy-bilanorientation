                    width: 46px
                    height: 32.2px
                    border-top: 1px solid rgba(128, 128, 128, 0.300)
                    border-right: 1px solid rgba(128, 128, 128, 0.300)
                    pointer-events: none
                    z-index: -1
                    @media screen and (max-width: 425px)
                        height: 45.2px
                .legendGraph
                    height: 32.2px
                    max-width: 150px
                    margin: 0
                    position: absolute
                    left: -160px
                    bottom: -4px
                    @media screen and (max-width: 425px)
                        left: 5px
                        top: -10px
                        background: white
                        height: fit-content
                        width: fit-content
            .numberGraph
                position: absolute
                right: -3px
                bottom: -45px
