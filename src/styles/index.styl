.btnImportContainer
    centerFlex()
    background: gradient
    border: none
    padding: 8px 15px
    border-radius: 20px
    box-shadow: soft-shadow
    cursor pointer
    transition: transform 0.3s
    input
        background: transparent
        border: none
        text-transform: uppercase
        font-weight: bold
        cursor pointer
    .arrowBtn
        background: color-secondary
        centerFlex()
        min-width 20px
        min-height: 20px
        border-radius: 50%
        svg
            width: 10px
            height: 10px
            fill: white
    &:hover
        background: color-secondary
        transform: scale(1.05)
        input
            color: white
        .arrowBtn
            background: gradient