            padding-left: 0
        .boxGraph
            width 235px
            height: max-content
            border-left: 4px solid black
            border-bottom: 4px solid black
            display: flex
            flex-direction: column 
            justify-content: flex-end
            position relative
            .rowGraph
                z-index: 20
                position relative
                display: flex
                &:nth-child(1)
                    .cel
                        border-top: none
                .meterGraph
                    background: gradient-reverse
                    height: 70%
                    width 0%
                    position: absolute
                    top: 5.5px
                    @media screen and (max-width: 425px)
                        height: 50%
                        top: 12.5px
