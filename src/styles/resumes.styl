@import './variable';
@import './mixin';

.containerResumes
    background: white
    border-radius: 15px
    border: solid 1px rgba(29,33,42,0.16)
    box-shadow: 0 4px 12px 0 rgba(0, 0, 0, 0.4)
    centerFlex()
    padding: 30px 10px

    svg
        width: 80px
        height 80px
        fill: color-secondary

    .containerImportDocument
        columnTopFlex()
        padding-bottom: 20px


        .bold
            font-weight: bold
        p 
            margin-bottom: 30px
            font-weight: 500
            font-size: 19px

.containerEditingDocument
    columnTopFlex()
    align-items: flex-start
    width: 100%
    margin: 0 10px

    .inputGroup
        width 100%
        display: flex
        flex-wrap: wrap

        .inputContent
            columnTopFlex()
            align-items: flex-start
            margin: 10px 0
            width: 50%
            min-width 310px

            label
                font-weight: bold
                font-size: 18px
                margin-bottom: 10px
        
            input, select
                background: gradient-low-opacity
                font-size: 16px
                border: none
                width 90%
                max-width: 250px
                padding: 10px
                border-radius: 10px
            
            input 
                max-width: 500px

    .containerSelectDocument
        background: gradient-low-opacity
        width: 100%
        margin: 20px 0
        border-radius: 10px
        min-height: 150px

        .inputGroup
            width: 100%
            display: flex

            button 
                width: 50%
                border: none
                cursor: pointer
                font-weight: bold
                font-size: 18px
                padding: 10px 0
                margin-bottom: 5px
                &:nth-child(1)
                    background: color-grayscale
                    border-top-left-radius: 10px
                &:nth-child(2)
                    background: color-secondary
                    color: white
                    border-top-right-radius: 10px
                @media screen and (max-width: 460px)
                    font-size: 16px

        .contentSelectDocument
            width 95%
            background: gradient
            margin: 10px auto
            border-radius: 10px
            .contentFile
                centerFlex()
                justify-content: space-between
                width 100%
                padding: 5px 0
                svg
                    width 30px !important
                    height 30px !important
                    min-width 30px !important
                    min-height: 30px !important
                    cursor: pointer
                    margin: 0 20px

                    @media screen and (max-width: 460px)
                        margin: 0 10px
                
                p
                    margin: 0
                    font-weight: 500
                    color: color-secondary

                &Title
                    centerFlex()
                    svg
                        filter: hue-rotate(45deg)

.btnContainer
    width: 100%
    centerFlex()