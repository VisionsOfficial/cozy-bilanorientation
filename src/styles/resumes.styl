@import './variable';
@import './mixin';

.containerResumes
    background: white
    border-radius: 15px
    border: solid 1px rgba(29,33,42,0.16)
    box-shadow: 0 4px 12px 0 rgba(0, 0, 0, 0.4)
    centerFlex()
    padding: 30px 10px

    svg
        width: 80px
        height 80px
        fill: color-secondary

    .containerImportDocument
        columnTopFlex()
        padding-bottom: 20px


        .bold
            font-weight: bold
        .informationImportDocument 
            margin-bottom: 30px
            font-weight: 500
            font-size: 19px

.containerEditingDocument
    columnTopFlex()
    align-items: flex-start
    width: 100%
    margin: 0 10px

    .inputGroup
        width 100%
        display: flex
        flex-wrap: wrap

        .inputContent
            columnTopFlex()
            align-items: flex-start
            margin: 10px 0
            width: 50%
            min-width 310px

            label
                font-weight: bold
                font-size: 18px
                margin-bottom: 10px
        
            input, select
                background: gradient-low-opacity
                font-size: 16px
                border: none
                width 90%
                max-width: 250px
                padding: 10px
                border-radius: 10px
            
            input 
                max-width: 500px

    .containerSelectDocument
        background: gradient-low-opacity
        width: 100%
        margin: 20px 0
        border-radius: 10px
        min-height: 160px
        cursor pointer

        .active
            outline: 2px solid color-secondary

        .inputGroup
            width: 100%
            display: flex

            label
                width: 50%
                span
                    width: 100%
                    display: flex
                    justify-content: center
                    background: color-secondary
                    color: white
                    border-top-right-radius: 10px
                    border-top-left-radius: 0px
                    
            span 
                width: 50%
                border: none
                cursor: pointer
                font-weight: bold
                font-size: 18px
                padding: 10px 0
                margin-bottom: 5px
                background: color-grayscale
                text-align: center
                border-top-left-radius: 10px
                @media screen and (max-width: 460px)
                    font-size: 16px

        .contentSelectDocument
            width 95%
            background: gradient
            margin: 10px auto
            border-radius: 10px
            padding: 0 20px
            .contentFile
                centerFlex()
                justify-content: space-between
                width 100%
                padding: 5px 0
                svg
                    width 30px !important
                    height 30px !important
                    min-width 30px !important
                    min-height: 30px !important
                    cursor: pointer

                    @media screen and (max-width: 460px)
                        margin: 0 10px
                
                p
                    margin: 0 20px
                    font-weight: 500
                    color: color-secondary

                &Title
                    centerFlex()
                    svg
                        filter: hue-rotate(45deg)
                
                &Icon
                    centerFlex()
                    transition: transform 0.1s
                    &:hover
                        svg
                            transform: scale(1.03)

.containerSummaryDocument
    columnTopFlex()

    .headerSummaryDocument
        centerFlex()
        width calc(100% + 20px)
        justify-content: flex-start
        margin-bottom: 20px
        border-bottom: solid 2px rgba(29,33,42,0.16)

        h3
            margin: 0 0 20px 25px

    .contentSummaryDocument
        columnTopFlex()
        margin-bottom: 20px
        &Information
            centerFlex()
            background: color-grayscale
            border-radius: 10px
            font-weight: 500
            width 98%

            p 
                margin: 5px 0

            svg
                filter: brightness(0.2)
                margin: 0 20px
                width: 35px
                height: 35px

        &Cards
            centerFlex()
            flex-wrap: wrap
            width 100%
            margin-top: 10px
            .cardDocument
                columnTopFlex()
                justify-content: space-between
                background: gradient-low-opacity
                text-align: center
                border-radius: 10px
                width calc(94% / 3)
                margin: 10px
                position relative
                padding-bottom: 20px
                &Content
                    font-weight: 500

                    &Icon
                        centerFlex()
                        background: gradient
                        width fit-content
                        margin: auto
                        margin-top: 20px
                        padding: 5px
                        border-radius: 5px
                        svg
                            filter: brightness(0) invert(1)
                            width 40px
                            height: 40px
                    
                    h4
                        color: color-primary
                        text-transform: uppercase

                &Cross
                    position: absolute
                    right: 10px
                    top: 10px
                    svg 
                        width: 30px
                        height: 30px
                        cursor: pointer
        

.btnContainer
    width: 100%
    centerFlex()